---
import '@/styles/global.css'
import CookieConsent from '@/components/CookieConsent'

export interface Props {
  title: string
  description?: string
  canonical?: string
  ogImage?: string
  ogType?: string
  noindex?: boolean
  jsonLd?: any
}

const { 
  title, 
  description = 'Experience authentic Albania with local guides who know the hidden gems. Skip tourist traps and discover real Balkan adventures with expert local operators.',
  canonical,
  ogImage = '/Assets/Albania/Albanian_Riviera_Beach_Blue_Water.jpeg',
  ogType = 'website',
  noindex = false,
  jsonLd
} = Astro.props

const siteUrl = 'https://tours.albaniavisit.com'
const canonicalURL = canonical || new URL(Astro.url.pathname, siteUrl).toString()
// Ensure ogImage is always an absolute URL
const absoluteOgImage = ogImage.startsWith('http') ? ogImage : `${siteUrl}${ogImage}`
const GA4_ID = import.meta.env.GA4_ID
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{title}</title>
  <meta name="description" content={description}>
  <link rel="canonical" href={canonicalURL}>
  <meta name="theme-color" content="#FF0000">
  
  <!-- Preconnect to critical domains first -->
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link rel="preconnect" href="https://images.weserv.nl">
  <link rel="preconnect" href="https://mioqyazjthmrmgsbsvfg.supabase.co">
  <link rel="dns-prefetch" href="https://www.googletagmanager.com">
  <link rel="dns-prefetch" href="https://scripts.clarity.ms">
  
  <!-- Critical CSS inline for above-the-fold content -->
  <style>
    /* Critical CSS for immediate render */
    body { margin: 0; font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif; }
    .skip-link { position: absolute; top: -40px; left: 0; background: #000; color: #fff; padding: 8px; text-decoration: none; z-index: 100; }
    .skip-link:focus { top: 0; }
    header { position: fixed; top: 0; left: 0; right: 0; background: rgba(255,255,255,0.95); backdrop-filter: blur(10px); z-index: 40; }
    .hero-slideshow { position: absolute; top: 0; left: 0; width: 100%; height: 100%; }
    .slide { position: absolute; inset: 0; opacity: 0; transition: opacity 3s; }
    .slide.active { opacity: 1; }
    .slide-image { width: 100%; height: 100%; object-fit: cover; }
  </style>
  
  <!-- OpenGraph -->
  <meta property="og:title" content={title}>
  <meta property="og:description" content={description}>
  <meta property="og:image" content={absoluteOgImage}>
  <meta property="og:image:width" content="1200">
  <meta property="og:image:height" content="630">
  <meta property="og:type" content={ogType}>
  <meta property="og:url" content={canonicalURL}>
  <meta property="og:site_name" content="AlbaniaVisit Tours">
  <meta property="og:locale" content="en_US">
  
  <!-- Twitter -->
  <meta name="twitter:card" content="summary_large_image">
  <meta name="twitter:title" content={title}>
  <meta name="twitter:description" content={description}>
  <meta name="twitter:image" content={absoluteOgImage}>
  <meta name="twitter:site" content="@AlbaniaVisit">
  
  {noindex && <meta name="robots" content="noindex, nofollow">}
  
  <!-- Favicon -->
  <link rel="icon" type="image/svg+xml" href="/favicon.svg">
  <link rel="sitemap" href="/sitemap-index.xml">
  
  <!-- Optimized font loading with display=swap -->
  <link rel="preload" as="style" href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap&subset=latin">
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap&subset=latin" rel="stylesheet" media="print" onload="this.media='all'">
  <noscript>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap&subset=latin" rel="stylesheet">
  </noscript>
  
  <!-- JSON-LD -->
  {jsonLd && (
    Array.isArray(jsonLd) ? (
      jsonLd.map(schema => (
        <script type="application/ld+json" set:html={JSON.stringify(schema)}></script>
      ))
    ) : (
      <script type="application/ld+json" set:html={JSON.stringify(jsonLd)}></script>
    )
  )}
</head>
<body class="bg-gray-50 text-gray-800 font-sans">
  <!-- Skip link for accessibility -->
  <a href="#main-content" class="skip-link">Skip to main content</a>
  
  <!-- Header with scroll effect -->
  <header id="main-header" class="fixed top-0 left-0 right-0 z-40 transition-all duration-300">
    <nav class="container mx-auto px-4">
      <div class="flex items-center justify-between h-16">
        <!-- Brand -->
        <a href="/" class="flex items-center gap-2 group">
          <svg class="w-6 h-6 text-accent group-hover:text-accent-600 transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
          </svg>
          <div>
            <div class="text-xl font-bold">
              <span class="text-gray-900">Albania</span><span class="text-accent">Visit</span>
            </div>
            <div class="text-[10px] text-gray-600 -mt-1 leading-tight">Discover the Unexpected</div>
          </div>
        </a>
        
        <!-- Desktop Navigation -->
        <div class="hidden md:flex items-center gap-8">
          <a href="/tours" class="text-gray-700 hover:text-accent transition-colors relative group flex items-center">
            Tours
            <span class="absolute -bottom-1 left-0 w-0 h-0.5 bg-accent transition-all group-hover:w-full"></span>
          </a>
          <div class="relative group">
            <button class="text-gray-700 hover:text-accent transition-colors flex items-center gap-1">
              Destinations
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
              </svg>
            </button>
            <div class="absolute top-full left-0 mt-2 w-48 bg-white rounded-lg shadow-xl opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all">
              <a href="/country/albania" class="block px-4 py-2 hover:bg-gray-50 hover:text-accent">Albania</a>
              <a href="/country/kosovo" class="block px-4 py-2 hover:bg-gray-50 hover:text-accent">Kosovo</a>
              <a href="/country/montenegro" class="block px-4 py-2 hover:bg-gray-50 hover:text-accent">Montenegro</a>
              <a href="/country/macedonia" class="block px-4 py-2 hover:bg-gray-50 hover:text-accent">North Macedonia</a>
            </div>
          </div>
          <a href="/about" class="text-gray-700 hover:text-accent transition-colors relative group">
            About
            <span class="absolute -bottom-1 left-0 w-0 h-0.5 bg-accent transition-all group-hover:w-full"></span>
          </a>
          <a href="/contact" class="text-gray-700 hover:text-accent transition-colors relative group">
            Contact
            <span class="absolute -bottom-1 left-0 w-0 h-0.5 bg-accent transition-all group-hover:w-full"></span>
          </a>
          <a href="/tours" class="bg-accent text-white px-4 py-2 rounded-full hover:bg-accent-600 transition-all font-semibold min-h-[40px] flex items-center">
            Book Now
          </a>
        </div>
        
        <!-- Mobile Menu Button -->
        <button id="mobile-menu-button" class="md:hidden p-2 rounded-lg hover:bg-gray-100">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
          </svg>
        </button>
      </div>
      
      <!-- Mobile Navigation -->
      <div id="mobile-menu" class="hidden md:hidden py-4 border-t">
        <a href="/tours" class="block py-2 hover:text-accent">Tours</a>
        <a href="/country/albania" class="block py-2 hover:text-accent">Albania</a>
        <a href="/country/kosovo" class="block py-2 hover:text-accent">Kosovo</a>
        <a href="/country/montenegro" class="block py-2 hover:text-accent">Montenegro</a>
        <a href="/country/macedonia" class="block py-2 hover:text-accent">North Macedonia</a>
        <a href="/about" class="block py-2 hover:text-accent">About</a>
        <a href="/contact" class="block py-2 hover:text-accent">Contact</a>
        <a href="/tours" class="inline-block bg-accent text-white px-4 py-2 rounded-full mt-4">Book Now</a>
      </div>
    </nav>
  </header>
  
  <slot />
  
  <!-- Footer -->
  <footer class="bg-gray-900 text-white pt-16 pb-8 mt-auto">
    <div class="container mx-auto px-4">
      <div class="grid grid-cols-1 md:grid-cols-4 gap-8 mb-8">
        <div>
          <h3 class="font-bold text-lg mb-4">AlbaniaVisit Tours</h3>
          <p class="text-gray-400 text-sm">Experience authentic Albania with local guides who know the hidden gems.</p>
        </div>
        <div>
          <h4 class="font-semibold mb-4">Destinations</h4>
          <ul class="space-y-2 text-sm">
            <li><a href="/country/albania" class="text-gray-400 hover:text-white">Albania</a></li>
            <li><a href="/country/kosovo" class="text-gray-400 hover:text-white">Kosovo</a></li>
            <li><a href="/country/montenegro" class="text-gray-400 hover:text-white">Montenegro</a></li>
            <li><a href="/country/macedonia" class="text-gray-400 hover:text-white">North Macedonia</a></li>
          </ul>
        </div>
        <div>
          <h4 class="font-semibold mb-4">Quick Links</h4>
          <ul class="space-y-2 text-sm">
            <li><a href="/tours" class="text-gray-400 hover:text-white">All Tours</a></li>
            <li><a href="/about" class="text-gray-400 hover:text-white">About Us</a></li>
            <li><a href="/contact" class="text-gray-400 hover:text-white">Contact</a></li>
            <li><a href="/terms" class="text-gray-400 hover:text-white">Terms & Conditions</a></li>
          </ul>
        </div>
        <div>
          <h4 class="font-semibold mb-4">Contact</h4>
          <ul class="space-y-2 text-sm text-gray-400">
            <li>Email: tours@albaniavisit.com</li>
            <li>Phone: +355 69 123 4567</li>
            <li>Address: Tirana, Albania</li>
          </ul>
        </div>
      </div>
      <div class="border-t border-gray-800 pt-8 text-center text-sm text-gray-400">
        <p>&copy; 2024 AlbaniaVisit Tours. All rights reserved.</p>
      </div>
    </div>
  </footer>
  
  <!-- Cookie Consent -->
  <CookieConsent client:idle />
  
  <!-- Deferred Analytics Scripts -->
  <script>
    // Defer non-critical scripts
    window.addEventListener('load', () => {
      // GA4
      const GA4_ID = '{GA4_ID}';
      if (GA4_ID && GA4_ID !== '{GA4_ID}') {
        const script1 = document.createElement('script');
        script1.async = true;
        script1.src = `https://www.googletagmanager.com/gtag/js?id=${GA4_ID}`;
        document.head.appendChild(script1);
        
        script1.onload = () => {
          window.dataLayer = window.dataLayer || [];
          function gtag(){dataLayer.push(arguments);}
          gtag('js', new Date());
          gtag('config', GA4_ID);
        };
      }
      
      // Microsoft Clarity
      setTimeout(() => {
        (function(c,l,a,r,i,t,y){
            c[a]=c[a]||function(){(c[a].q=c[a].q||[]).push(arguments)};
            t=l.createElement(r);t.async=1;t.src="https://www.clarity.ms/tag/"+i;
            y=l.getElementsByTagName(r)[0];y.parentNode.insertBefore(t,y);
        })(window, document, "clarity", "script", "h6lok3y5lg");
      }, 3000); // Delay Clarity by 3 seconds
    });
  </script>
  
  <!-- Header scroll effect -->
  <script>
    // Inline critical JS for header
    let lastScroll = 0;
    const header = document.getElementById('main-header');
    
    window.addEventListener('scroll', () => {
      const currentScroll = window.pageYOffset;
      
      if (currentScroll > 50) {
        header.classList.add('bg-white/95', 'backdrop-blur-lg', 'shadow-lg');
        header.classList.remove('bg-transparent');
      } else {
        header.classList.remove('bg-white/95', 'backdrop-blur-lg', 'shadow-lg');
        header.classList.add('bg-transparent');
      }
      
      lastScroll = currentScroll;
    }, { passive: true });
    
    // Mobile menu toggle
    const mobileMenuButton = document.getElementById('mobile-menu-button');
    const mobileMenu = document.getElementById('mobile-menu');
    
    mobileMenuButton?.addEventListener('click', () => {
      mobileMenu?.classList.toggle('hidden');
    });
  </script>
</body>
</html>