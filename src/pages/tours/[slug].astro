---
import BaseLayout from '@/layouts/BaseLayout.astro'
import { getAllSlugs, getTourDetail, getSimilarTours } from '@/lib/queries'
import { generateTouristTripSchema, generateBreadcrumbSchema, generateMetaTags } from '@/lib/seo'
import { getEnhancedTour, hasEnhancedCopy, getBadgeEmoji } from '@/data/enhancedTours'
import InquiryForm from '@/components/tours/InquiryForm'
import BookingButton from '@/components/tours/BookingButton'

export async function getStaticPaths() {
  const slugs = await getAllSlugs()
  return slugs.map(({ slug }) => ({
    params: { slug }
  }))
}

const { slug } = Astro.params
const tour = await getTourDetail(slug)

if (!tour) {
  return Astro.redirect('/404')
}

// Get enhanced copy if available
const enhancedTour = getEnhancedTour(slug)
const hasEnhanced = hasEnhancedCopy(slug)

// Get similar tours based on meaningful criteria
const similarTours = await getSimilarTours(tour, 4)

const url = `https://tours.albaniavisit.com/tours/${slug}`
const metaTags = generateMetaTags(tour)
const touristTripSchema = generateTouristTripSchema(tour, url)
const breadcrumbSchema = generateBreadcrumbSchema([
  { name: 'Home', url: 'https://tours.albaniavisit.com' },
  { name: 'Tours', url: 'https://tours.albaniavisit.com/tours' },
  { name: enhancedTour?.enhancedTitle || tour.title, url }
])
---

<BaseLayout 
  title={metaTags.title}
  description={metaTags.description}
  canonical={url}
  ogImage={metaTags.ogImage}
  ogType="product"
  jsonLd={[touristTripSchema, breadcrumbSchema]}
>
  <style>
    .hero-gradient {
      background: linear-gradient(
        to bottom,
        rgba(0, 0, 0, 0) 0%,
        rgba(0, 0, 0, 0.1) 40%,
        rgba(0, 0, 0, 0.4) 70%,
        rgba(0, 0, 0, 0.7) 100%
      );
    }
    
    .content-section {
      @apply py-12 md:py-16;
    }
    
    .section-title {
      @apply text-3xl md:text-4xl font-bold mb-8 text-gray-900;
    }
    
    .info-card {
      @apply bg-white rounded-2xl shadow-lg p-8 hover:shadow-xl transition-shadow;
    }
    
    .badge-pill {
      @apply inline-flex items-center gap-2 px-4 py-2 rounded-full text-sm font-semibold;
    }
  </style>

  <!-- Hero Section - Full Screen Impact -->
  <section class="relative h-screen max-h-[900px] min-h-[600px]">
    <!-- Hero Image Container -->
    <div class="absolute inset-0">
      <img 
        id="hero-image"
        src={tour.images[0]?.url || '/placeholder.jpg'} 
        alt={tour.title}
        class="w-full h-full object-cover"
      />
      <div class="hero-gradient absolute inset-0"></div>
    </div>

    <!-- Navigation Arrows -->
    {tour.images.length > 1 && (
      <>
        <button id="prev-image" class="absolute left-4 md:left-8 top-1/2 -translate-y-1/2 z-20 w-14 h-14 bg-white/10 backdrop-blur-md rounded-full flex items-center justify-center text-white hover:bg-white/20 transition-all transform hover:scale-110">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M15 19l-7-7 7-7"/>
          </svg>
        </button>
        <button id="next-image" class="absolute right-4 md:right-8 top-1/2 -translate-y-1/2 z-20 w-14 h-14 bg-white/10 backdrop-blur-md rounded-full flex items-center justify-center text-white hover:bg-white/20 transition-all transform hover:scale-110">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M9 5l7 7-7 7"/>
          </svg>
        </button>
      </>
    )}

    <!-- Hero Content -->
    <div class="absolute bottom-0 left-0 right-0 z-10 pb-12">
      <div class="container mx-auto px-4">
        <div class="max-w-4xl">
          <!-- Badges -->
          {hasEnhanced && enhancedTour?.badges && (
            <div class="flex flex-wrap gap-3 mb-6">
              {enhancedTour.badges.map(badge => (
                <span class="badge-pill bg-accent text-white shadow-lg">
                  <span class="text-lg">{getBadgeEmoji(badge)}</span>
                  {badge}
                </span>
              ))}
            </div>
          )}
          
          <!-- Title & Tagline -->
          <h1 class="text-4xl md:text-6xl font-bold text-white mb-4 leading-tight">
            {hasEnhanced && enhancedTour ? enhancedTour.enhancedTitle : tour.title}
          </h1>
          
          {hasEnhanced && enhancedTour?.tagline && (
            <p class="text-xl md:text-2xl text-white/90 mb-8 font-light">{enhancedTour.tagline}</p>
          )}
          
          <!-- Quick Info -->
          <div class="flex flex-wrap gap-4">
            {tour.durationDisplay && (
              <div class="badge-pill bg-white/20 backdrop-blur-md text-white border border-white/30">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
                </svg>
                {tour.durationDisplay}
              </div>
            )}
            {tour.difficulty && (
              <div class="badge-pill bg-white/20 backdrop-blur-md text-white border border-white/30">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7"/>
                </svg>
                {tour.difficulty} Level
              </div>
            )}
            <div class="badge-pill bg-white/20 backdrop-blur-md text-white border border-white/30">
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
              </svg>
              {tour.countries.join(' â€¢ ')}
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Image Counter -->
    <button 
      id="open-lightbox"
      class="absolute top-8 right-8 bg-white/10 backdrop-blur-md rounded-full px-6 py-3 flex items-center gap-3 text-white hover:bg-white/20 transition-all"
    >
      <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
        <path fill-rule="evenodd" d="M4 3a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V5a2 2 0 00-2-2H4zm12 12H4l4-8 3 6 2-4 3 6z" clip-rule="evenodd"/>
      </svg>
      <span class="font-medium">{tour.images.length} Photos</span>
    </button>
  </section>

  <!-- Thumbnail Gallery - Clean Grid -->
  {tour.images.length > 1 && (
    <section class="bg-gray-50 py-4 border-y">
      <div class="container mx-auto px-4">
        <div class="flex gap-3 overflow-x-auto scrollbar-hide py-2 px-2">
          {tour.images.slice(0, 10).map((image, index) => (
            <button 
              class={`thumbnail-btn flex-shrink-0 rounded-lg overflow-hidden transition-all hover:scale-105 ${index === 0 ? 'ring-2 ring-offset-2 ring-accent' : ''}`}
              style="width: 100px; height: 75px;"
              data-index={index}
            >
              <img 
                src={image.url} 
                alt={`View ${index + 1}`}
                class="w-full h-full object-cover"
              />
            </button>
          ))}
          {tour.images.length > 10 && (
            <button id="show-all-images" class="flex-shrink-0 w-[100px] h-[75px] bg-gray-200 rounded-lg flex flex-col items-center justify-center text-gray-600 hover:bg-gray-300 transition-colors">
              <svg class="w-6 h-6 mb-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
              </svg>
              <span class="text-xs font-medium">+{tour.images.length - 10} more</span>
            </button>
          )}
        </div>
      </div>
    </section>
  )}

  <!-- Main Content Area -->
  <div class="container mx-auto px-4 py-12 pb-32 md:pb-12">
    <div class="grid grid-cols-1 lg:grid-cols-3 gap-12">
      
      <!-- Left Content - 2 Columns -->
      <div class="lg:col-span-2">
        
        <!-- Overview Section -->
        <section class="content-section">
          <h2 class="section-title">Tour Overview</h2>
          
          {hasEnhanced && enhancedTour ? (
            <div class="space-y-8">
              <!-- Hero Description -->
              <div class="text-lg text-gray-700 leading-relaxed">
                <p class="text-xl mb-6">{enhancedTour.heroDescription}</p>
              </div>
              
              <!-- Highlights Grid -->
              {enhancedTour.highlights && enhancedTour.highlights.length > 0 && (
                <div class="info-card">
                  <h3 class="text-2xl font-bold mb-6 text-gray-900">Experience Highlights</h3>
                  <div class="grid md:grid-cols-2 gap-6">
                    {enhancedTour.highlights.map(highlight => (
                      <div class="flex items-start gap-4">
                        <div class="w-10 h-10 bg-accent/10 rounded-full flex items-center justify-center flex-shrink-0">
                          <svg class="w-5 h-5 text-accent" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                          </svg>
                        </div>
                        <p class="text-gray-700 leading-relaxed">{highlight}</p>
                      </div>
                    ))}
                  </div>
                </div>
              )}
              
              <!-- Available Dates -->
              {enhancedTour.dates && enhancedTour.dates.length > 0 && (
                <div class="info-card bg-accent/5 border-2 border-accent/20">
                  <h3 class="text-2xl font-bold mb-6 text-gray-900">2025 Departure Dates</h3>
                  <div class="grid grid-cols-2 md:grid-cols-3 gap-4">
                    {enhancedTour.dates.map(date => (
                      <div class="bg-white rounded-lg p-4 text-center shadow-sm">
                        <p class="font-semibold text-gray-900">{date}</p>
                      </div>
                    ))}
                  </div>
                </div>
              )}
              
              <!-- Unique Features -->
              {enhancedTour.uniqueFeatures && enhancedTour.uniqueFeatures.length > 0 && (
                <div class="bg-gradient-to-br from-gray-50 to-gray-100 rounded-2xl p-8">
                  <h3 class="text-2xl font-bold mb-6 text-gray-900">What Makes This Special</h3>
                  <div class="grid gap-4">
                    {enhancedTour.uniqueFeatures.map(feature => (
                      <div class="flex items-center gap-4 bg-white rounded-lg p-4 shadow-sm">
                        <div class="w-2 h-2 bg-accent rounded-full"></div>
                        <p class="text-gray-700">{feature}</p>
                      </div>
                    ))}
                  </div>
                </div>
              )}
            </div>
          ) : (
            <div class="space-y-8">
              <div class="text-lg text-gray-700 leading-relaxed">
                <p class="text-xl mb-6">{tour.fullDescription || tour.shortDescription}</p>
              </div>
              
              <div class="info-card">
                <h3 class="text-2xl font-bold mb-6 text-gray-900">What You'll Experience</h3>
                <div class="grid gap-6">
                  <div class="flex items-start gap-4">
                    <div class="w-10 h-10 bg-accent/10 rounded-full flex items-center justify-center flex-shrink-0">
                      <span class="text-accent font-bold">1</span>
                    </div>
                    <p class="text-gray-700">
                      {tour.countries.length > 1 
                        ? `Multi-country adventure through ${tour.countries.join(', ')}, experiencing diverse cultures and landscapes`
                        : `Authentic local experience in ${tour.countries[0] || 'the region'} with expert guidance`
                      }
                    </p>
                  </div>
                  <div class="flex items-start gap-4">
                    <div class="w-10 h-10 bg-accent/10 rounded-full flex items-center justify-center flex-shrink-0">
                      <span class="text-accent font-bold">2</span>
                    </div>
                    <p class="text-gray-700">Professional local guides with deep knowledge of the area's history and culture</p>
                  </div>
                  <div class="flex items-start gap-4">
                    <div class="w-10 h-10 bg-accent/10 rounded-full flex items-center justify-center flex-shrink-0">
                      <span class="text-accent font-bold">3</span>
                    </div>
                    <p class="text-gray-700">Small group sizes ensuring personalized attention and flexible itineraries</p>
                  </div>
                </div>
              </div>
            </div>
          )}
        </section>

        <!-- What's Included Section -->
        {(tour.inclusions.length > 0 || tour.exclusions.length > 0) && (
          <section class="content-section">
            <h2 class="section-title">What's Included</h2>
            
            <div class="grid md:grid-cols-2 gap-8">
              {tour.inclusions.length > 0 && (
                <div class="info-card">
                  <h3 class="text-xl font-bold mb-6 text-green-700">Included</h3>
                  <div class="space-y-4">
                    {tour.inclusions.map(item => (
                      <div class="flex items-start gap-3">
                        <svg class="w-6 h-6 text-green-600 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                        </svg>
                        <p class="text-gray-700">{item}</p>
                      </div>
                    ))}
                  </div>
                </div>
              )}
              
              {tour.exclusions.length > 0 && (
                <div class="info-card bg-gray-50">
                  <h3 class="text-xl font-bold mb-6 text-gray-700">Not Included</h3>
                  <div class="space-y-4">
                    {tour.exclusions.map(item => (
                      <div class="flex items-start gap-3">
                        <svg class="w-6 h-6 text-gray-400 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 14l2-2m0 0l2-2m-2 2l-2-2m2 2l2 2m7-2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                        </svg>
                        <p class="text-gray-600">{item}</p>
                      </div>
                    ))}
                  </div>
                </div>
              )}
            </div>
          </section>
        )}

        <!-- Important Information -->
        {tour.departureNotes && (
          <section class="content-section">
            <div class="info-card bg-amber-50 border-2 border-amber-200">
              <div class="flex items-start gap-4">
                <svg class="w-8 h-8 text-amber-600 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
                <div>
                  <h3 class="text-xl font-bold mb-3 text-gray-900">Important Information</h3>
                  <p class="text-gray-700">{tour.departureNotes}</p>
                </div>
              </div>
            </div>
          </section>
        )}
      </div>

      <!-- Right Sidebar - Sticky Booking Card -->
      <div class="lg:col-span-1">
        <div class="sticky top-24">
          <div class="info-card border-2 border-accent/20">
            <!-- Price Section -->
            <div class="text-center pb-6 border-b">
              {tour.priceMin ? (
                <>
                  <p class="text-sm text-gray-500 uppercase tracking-wide mb-2">Starting from</p>
                  <div class="text-5xl font-bold text-gray-900 mb-2">
                    â‚¬{tour.priceMin}
                  </div>
                  <p class="text-gray-500">per person</p>
                  {tour.priceMax && tour.priceMax !== tour.priceMin && (
                    <p class="text-sm text-gray-400 mt-2">Up to â‚¬{tour.priceMax}</p>
                  )}
                </>
              ) : (
                <>
                  <p class="text-sm text-gray-500 uppercase tracking-wide mb-2">Pricing</p>
                  <div class="text-3xl font-bold text-gray-900 mb-2">Price on Request</div>
                  <p class="text-gray-500">Contact for details</p>
                </>
              )}
            </div>
            
            <!-- Quick Stats -->
            <div class="grid grid-cols-2 gap-4 py-6 border-b">
              {tour.durationDisplay && (
                <div class="text-center">
                  <p class="text-2xl font-bold text-gray-900">{tour.durationDays || '1'}</p>
                  <p class="text-sm text-gray-500">Days</p>
                </div>
              )}
              <div class="text-center">
                <p class="text-2xl font-bold text-gray-900">{tour.countries.length}</p>
                <p class="text-sm text-gray-500">Countries</p>
              </div>
            </div>
            
            <!-- CTA Buttons -->
            <div class="space-y-4 pt-6">
              <BookingButton
                tour={tour}
                context="tour-detail"
                className="w-full text-lg py-4 font-semibold"
                client:load
              >
                Book This Tour
              </BookingButton>
              
              <button 
                id="inquiry-btn"
                class="w-full bg-gray-100 text-gray-900 px-6 py-4 rounded-lg hover:bg-gray-200 transition-all font-semibold"
                data-tour-id={tour.id}
                data-tour-slug={tour.slug}
              >
                Ask a Question
              </button>
            </div>
            
            <!-- Trust Badges -->
            <div class="mt-6 pt-6 border-t space-y-3">
              <div class="flex items-center gap-3 text-sm text-gray-600">
                <svg class="w-5 h-5 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                </svg>
                <span>Free cancellation up to 24h</span>
              </div>
              <div class="flex items-center gap-3 text-sm text-gray-600">
                <svg class="w-5 h-5 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                </svg>
                <span>Instant confirmation</span>
              </div>
              <div class="flex items-center gap-3 text-sm text-gray-600">
                <svg class="w-5 h-5 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                </svg>
                <span>Best price guarantee</span>
              </div>
            </div>
            
            <!-- Operator Info -->
            {tour.operator && (
              <div class="mt-6 pt-6 border-t">
                <p class="text-xs text-gray-500 uppercase tracking-wide mb-2">Tour Operator</p>
                <p class="font-semibold text-gray-900">{tour.operator.name}</p>
              </div>
            )}
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Why Book With Us - Full Width -->
  <section class="bg-gradient-to-br from-gray-900 to-gray-800 text-white py-20">
    <div class="container mx-auto px-4">
      <div class="text-center max-w-3xl mx-auto mb-12">
        <h2 class="text-4xl font-bold mb-6">Why Use AlbaniaVisit</h2>
        <p class="text-xl text-gray-300">
          We connect you with trusted local tour operators for authentic experiences at the best prices
        </p>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8 max-w-5xl mx-auto">
        <div class="text-center">
          <div class="w-20 h-20 bg-accent rounded-full flex items-center justify-center mx-auto mb-6">
            <svg class="w-10 h-10 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"></path>
            </svg>
          </div>
          <h3 class="text-2xl font-bold mb-3">Verified Operators</h3>
          <p class="text-gray-300">We only feature vetted tour operators for your safety and peace of mind</p>
        </div>
        
        <div class="text-center">
          <div class="w-20 h-20 bg-accent rounded-full flex items-center justify-center mx-auto mb-6">
            <svg class="w-10 h-10 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
          </div>
          <h3 class="text-2xl font-bold mb-3">Direct Booking</h3>
          <p class="text-gray-300">Book directly with operators at their best available rates</p>
        </div>
        
        <div class="text-center">
          <div class="w-20 h-20 bg-accent rounded-full flex items-center justify-center mx-auto mb-6">
            <svg class="w-10 h-10 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"></path>
            </svg>
          </div>
          <h3 class="text-2xl font-bold mb-3">Local Expertise</h3>
          <p class="text-gray-300">Connect with passionate local guides for authentic experiences</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Similar Tours -->
  {similarTours.length > 0 && (
    <section class="content-section bg-gray-50">
      <div class="container mx-auto px-4">
        <h2 class="section-title text-center">You Might Also Like</h2>
        
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
          {similarTours.map((similarTour) => (
            <article class="bg-white rounded-xl shadow-lg overflow-hidden hover:shadow-xl transition-all transform hover:-translate-y-2">
              <div class="aspect-[4/3] relative overflow-hidden">
                <img 
                  src={similarTour.primaryImageUrl} 
                  alt={similarTour.title}
                  loading="lazy"
                  class="w-full h-full object-cover hover:scale-110 transition-transform duration-700"
                />
                {similarTour.featured && (
                  <span class="absolute top-4 left-4 bg-accent text-white px-3 py-1 rounded-full text-xs font-bold">
                    Featured
                  </span>
                )}
              </div>
              <div class="p-5">
                <h3 class="text-lg font-bold mb-2 line-clamp-2">
                  <a href={`/tours/${similarTour.slug}`} class="hover:text-accent transition-colors">
                    {similarTour.title}
                  </a>
                </h3>
                <div class="flex items-center justify-between mb-4">
                  <div class="flex gap-2">
                    {similarTour.durationDisplay && (
                      <span class="text-xs bg-gray-100 px-2 py-1 rounded">
                        {similarTour.durationDisplay}
                      </span>
                    )}
