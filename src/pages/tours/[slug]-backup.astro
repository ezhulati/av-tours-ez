---
import BaseLayout from '@/layouts/BaseLayout.astro'
import { getTourDetail, getSimilarTours } from '@/lib/queries'
import { generateTouristTripSchema, generateBreadcrumbSchema, generateMetaTags } from '@/lib/seo'
import { getEnhancedTour, hasEnhancedCopy } from '@/data/enhancedTours'
import InquiryForm from '@/components/tours/InquiryForm'
import BookingButton from '@/components/tours/BookingButton'

// SSR mode - no getStaticPaths needed
const { slug } = Astro.params
const tour = await getTourDetail(slug)

if (!tour) {
  return Astro.redirect('/404')
}

// Get enhanced copy if available
const enhancedTour = getEnhancedTour(slug)
const hasEnhanced = hasEnhancedCopy(slug)

// Get similar tours based on meaningful criteria
const similarTours = await getSimilarTours(tour, 4)

const url = `https://tours.albaniavisit.com/tours/${slug}`
const metaTags = generateMetaTags(tour)
const touristTripSchema = generateTouristTripSchema(tour, url)
const breadcrumbSchema = generateBreadcrumbSchema([
  { name: 'Home', url: 'https://tours.albaniavisit.com' },
  { name: 'Tours', url: 'https://tours.albaniavisit.com/tours' },
  { name: enhancedTour?.enhancedTitle || tour.title, url }
])
---

<BaseLayout 
  title={metaTags.title}
  description={metaTags.description}
  canonical={url}
  ogImage={metaTags.ogImage}
  ogType="product"
  jsonLd={[touristTripSchema, breadcrumbSchema]}
>
  <!-- Modern Mobile-First Hero Section -->
  <section class="relative bg-white">
    <!-- Main Image Container -->
    <div class="relative h-[60vh] lg:h-[75vh] min-h-[400px] max-h-[500px] lg:max-h-none bg-gray-900">
      <img 
        id="hero-image"
        src={tour.images[0]?.url || '/placeholder.jpg'} 
        alt={tour.title}
        class="w-full h-full object-cover transition-opacity duration-300"
      />
      
      <!-- Gradient Overlay for Text Readability -->
      <div class="absolute inset-0 bg-gradient-to-t from-black/60 via-black/20 to-transparent"></div>
      
      <!-- Top Bar - Clean -->
      <div class="absolute top-0 left-0 right-0 z-20 safe-top">
        <div class="flex items-center justify-end p-4">
          <button 
            id="open-lightbox"
            class="bg-black/30 backdrop-blur-sm rounded-full px-4 py-2 flex items-center gap-2 text-white text-sm font-medium hover:bg-black/50 transition-colors"
          >
            <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M4 3a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V5a2 2 0 00-2-2H4zm12 12H4l4-8 3 6 2-4 3 6z" clip-rule="evenodd"/>
            </svg>
            <span>{tour.images.length} Photos</span>
          </button>
        </div>
      </div>
      
      <!-- Image Navigation (if multiple images) -->
      {tour.images.length > 1 && (
        <>
          <button id="prev-image" class="absolute left-4 top-1/2 -translate-y-1/2 w-10 h-10 bg-black/30 backdrop-blur-sm rounded-full flex items-center justify-center text-white hover:bg-black/50 transition-colors">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
            </svg>
          </button>
          <button id="next-image" class="absolute right-4 top-1/2 -translate-y-1/2 w-10 h-10 bg-black/30 backdrop-blur-sm rounded-full flex items-center justify-center text-white hover:bg-black/50 transition-colors">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
            </svg>
          </button>
        </>
      )}
      
      <!-- Bottom Content Overlay -->
      <div class="absolute bottom-0 left-0 right-0 z-10">
        <div class="container mx-auto px-4 pb-6">
          <!-- Badges -->
          {hasEnhanced && enhancedTour?.badges && (
            <div class="flex items-center gap-2 mb-3">
              {enhancedTour.badges.slice(0, 2).map(badge => (
                <span class="bg-accent px-3 py-1 rounded-full text-white text-xs font-bold uppercase tracking-wide">
                  {badge}
                </span>
              ))}
            </div>
          )}
          
          <!-- Title -->
          <h1 class="text-2xl font-bold text-white mb-2 leading-tight">
            {hasEnhanced && enhancedTour ? enhancedTour.enhancedTitle : tour.title}
          </h1>
          
          <!-- Tagline -->
          {hasEnhanced && enhancedTour?.tagline && (
            <p class="text-white/90 text-sm mb-3">{enhancedTour.tagline}</p>
          )}
          
          <!-- Quick Info Pills -->
          <div class="flex items-center gap-2 flex-wrap">
            {tour.durationDisplay && (
              <div class="bg-white/20 backdrop-blur-sm px-3 py-1 rounded-full flex items-center gap-1">
                <svg class="w-3 h-3 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
                </svg>
                <span class="text-white text-xs font-medium">{tour.durationDisplay}</span>
              </div>
            )}
            {tour.difficulty && (
              <div class="bg-white/20 backdrop-blur-sm px-3 py-1 rounded-full flex items-center gap-1">
                <svg class="w-3 h-3 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7"/>
                </svg>
                <span class="text-white text-xs font-medium capitalize">{tour.difficulty}</span>
              </div>
            )}
            <div class="bg-white/20 backdrop-blur-sm px-3 py-1 rounded-full flex items-center gap-1">
              <svg class="w-3 h-3 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
              </svg>
              <span class="text-white text-xs font-medium">{tour.countries.slice(0, 2).join(', ')}</span>
            </div>
          </div>
        </div>
      </div>
      
    </div>
    
    <!-- Thumbnail Gallery -->
    {tour.images.length > 1 && (
      <div class="bg-white border-b border-gray-100">
        <div class="container mx-auto px-4">
          <div class="overflow-x-auto scrollbar-hide py-3">
            <div class="flex gap-2 min-w-max pl-0.5">
              {tour.images.slice(0, 8).map((image, index) => (
                <button 
                  class={`thumbnail-btn relative flex-shrink-0 rounded-lg overflow-hidden transition-all hover:scale-105 ${index === 0 ? 'ring-2 ring-accent' : ''}`}
                  style="width: 64px; height: 48px;"
                  data-index={index}
                >
                  <img 
                    src={image.url} 
                    alt={`View ${index + 1}`}
                    class="w-full h-full object-cover"
                  />
                </button>
              ))}
              {tour.images.length > 8 && (
                <button id="show-all-images" class="flex-shrink-0 w-16 h-12 bg-gray-100 rounded-lg flex items-center justify-center text-gray-500 text-xs hover:bg-gray-200 transition-colors">
                  +{tour.images.length - 8}
                </button>
              )}
            </div>
          </div>
        </div>
      </div>
    )}
    
    <!-- Sticky Booking Bar (Mobile Only) -->
    <div class="lg:hidden sticky top-0 z-40 bg-white border-b border-gray-200 shadow-sm">
      <div class="flex items-center justify-between px-4 py-3">
        <div class="flex-1">
          <div class="text-lg font-bold text-gray-900">
            {tour.priceMin ? (
              <>
                From <span class="text-accent">€{tour.priceMin}</span>
                <span class="text-sm font-normal text-gray-500 ml-1">/person</span>
              </>
            ) : (
              <span class="text-accent">Price on request</span>
            )}
          </div>
        </div>
        <BookingButton
          tour={tour}
          context="tour-detail"
          className="px-6 py-3 text-sm font-semibold"
          client:idle
        />
      </div>
    </div>
  </section>

  <!-- Lightbox Modal -->
  <div id="lightbox-modal" class="fixed inset-0 z-50 bg-black hidden">
    <!-- Close Button -->
    <button
      id="close-lightbox"
      class="absolute top-4 right-4 z-50 w-12 h-12 bg-white/20 backdrop-blur-sm rounded-full flex items-center justify-center hover:bg-white/30 transition-all text-white"
      aria-label="Close gallery"
    >
      <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
      </svg>
    </button>

    <!-- Image Counter -->
    <div class="absolute top-4 left-4 z-50 bg-black/60 backdrop-blur-sm text-white px-4 py-2 rounded-lg">
      <span id="lightbox-counter">1 / {tour.images.length}</span>
    </div>

    <!-- Main Image Container -->
    <div class="h-full flex items-center justify-center p-4">
      <img
        id="lightbox-image"
        src={tour.images[0]?.url || '/placeholder.jpg'}
        alt={tour.title}
        class="max-w-full max-h-full object-contain"
      />
    </div>

    <!-- Navigation -->
    {tour.images.length > 1 && (
      <>
        <button
          id="lightbox-prev"
          class="absolute left-4 top-1/2 -translate-y-1/2 w-14 h-14 bg-white/20 backdrop-blur-sm rounded-full flex items-center justify-center hover:bg-white/30 transition-all text-white"
          aria-label="Previous image"
        >
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
          </svg>
        </button>
        
        <button
          id="lightbox-next"
          class="absolute right-4 top-1/2 -translate-y-1/2 w-14 h-14 bg-white/20 backdrop-blur-sm rounded-full flex items-center justify-center hover:bg-white/30 transition-all text-white"
          aria-label="Next image"
        >
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
          </svg>
        </button>
      </>
    )}

    <!-- Thumbnail Strip at Bottom -->
    <div class="absolute bottom-0 left-0 right-0 bg-gradient-to-t from-black/90 to-transparent px-4 pt-8 pb-4">
      <div class="flex gap-2 justify-center overflow-x-auto">
        {tour.images.map((image, index) => (
          <button
            class={`lightbox-thumb flex-shrink-0 relative rounded-lg overflow-hidden transition-all ${index === 0 ? 'ring-2 ring-white scale-110' : 'opacity-60 hover:opacity-100'}`}
            data-index={index}
          >
            <img
              src={image.url}
              alt={`Thumbnail ${index + 1}`}
              class="w-16 h-12 object-cover"
            />
          </button>
        ))}
      </div>
    </div>
  </div>

  <!-- Main Content -->
  <div class="container mx-auto px-4 py-12">
    <div class="grid grid-cols-1 lg:grid-cols-3 gap-12">
      
      <!-- Left Content -->
      <div class="lg:col-span-2 space-y-12">
        
        <!-- Enhanced Overview Section -->
        <section>
          <h2 class="text-3xl font-bold mb-6 flex items-center gap-3">
            <span class="block w-1 h-8 bg-accent"></span>
            Overview
          </h2>
          
          {hasEnhanced && enhancedTour ? (
            <div class="space-y-6">
              <!-- Hero Description -->
              <div class="prose prose-lg max-w-none text-gray-700 leading-relaxed">
                <p class="text-xl font-medium text-gray-900 mb-4">{enhancedTour.heroDescription}</p>
              </div>
              
              <!-- Available Dates -->
              {enhancedTour.dates && enhancedTour.dates.length > 0 && (
                <div class="bg-accent/5 border-l-4 border-accent p-6 rounded-r-lg">
                  <h3 class="font-bold text-gray-900 mb-3 text-lg">2025 Departures:</h3>
                  <div class="grid gap-2">
                    {enhancedTour.dates.map(date => (
                      <div class="flex items-center gap-2">
                        <span class="w-2 h-2 bg-accent rounded-full"></span>
                        <span class="font-medium">{date}</span>
                      </div>
                    ))}
                  </div>
                </div>
              )}
              
              <!-- Experience Highlights -->
              {enhancedTour.highlights && enhancedTour.highlights.length > 0 && (
                <div>
                  <h3 class="text-xl font-bold mb-4 text-gray-900">Experience Highlights</h3>
                  <div class="grid gap-4">
                    {enhancedTour.highlights.map(highlight => (
                      <div class="flex items-start gap-3">
                        <div class="w-6 h-6 bg-accent/10 rounded-full flex items-center justify-center flex-shrink-0 mt-0.5">
                          <span class="w-2 h-2 bg-accent rounded-full"></span>
                        </div>
                        <span class="text-gray-700 leading-relaxed">{highlight}</span>
                      </div>
                    ))}
                  </div>
                </div>
              )}
              
              <!-- Unique Features -->
              {enhancedTour.uniqueFeatures && enhancedTour.uniqueFeatures.length > 0 && (
                <div class="bg-gray-50 p-6 rounded-xl">
                  <h3 class="text-lg font-bold mb-4 text-gray-900">What Makes This Special</h3>
                  <div class="space-y-2">
                    {enhancedTour.uniqueFeatures.map(feature => (
                      <div class="flex items-center gap-2">
                        <svg class="w-4 h-4 text-accent flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                        </svg>
                        <span class="text-gray-700">{feature}</span>
                      </div>
                    ))}
                  </div>
                </div>
              )}
            </div>
          ) : (
            <div class="space-y-6">
              <!-- Basic Description -->
              <div class="prose prose-lg max-w-none text-gray-700 leading-relaxed">
                <p class="text-xl font-medium text-gray-900 mb-4">{tour.fullDescription || tour.shortDescription}</p>
              </div>
              
              <!-- Enhanced fallback content to help users understand the tour -->
              <div class="bg-gradient-to-r from-blue-50 to-indigo-50 border border-blue-100 p-6 rounded-xl">
                <h3 class="text-lg font-bold text-gray-900 mb-3 flex items-center gap-2">
                  <svg class="w-5 h-5 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                  </svg>
                  About This Experience
                </h3>
                <div class="grid gap-4 text-gray-700">
                  {tour.durationDisplay && (
                    <div class="flex items-center gap-3">
                      <svg class="w-4 h-4 text-gray-400 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                      </svg>
                      <span><strong>Duration:</strong> {tour.durationDisplay} of adventure</span>
                    </div>
                  )}
                  {tour.difficulty && (
                    <div class="flex items-center gap-3">
                      <svg class="w-4 h-4 text-gray-400 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
                      </svg>
                      <span><strong>Difficulty:</strong> {tour.difficulty} level - suitable for most fitness levels</span>
                    </div>
                  )}
                  {tour.countries.length > 0 && (
                    <div class="flex items-center gap-3">
                      <svg class="w-4 h-4 text-gray-400 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                      </svg>
                      <span><strong>Location:</strong> Explore the beauty of {tour.countries.join(', ')}</span>
                    </div>
                  )}
                  <div class="flex items-center gap-3">
                    <svg class="w-4 h-4 text-gray-400 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM9 3a2 2 0 11-4 0 2 2 0 014 0z"></path>
                    </svg>
                    <span><strong>Group Size:</strong> Small groups for personalized attention</span>
                  </div>
                </div>
              </div>
              
              <!-- What to Expect section for tours without enhanced content -->
              <div>
                <h3 class="text-xl font-bold mb-4 text-gray-900">What to Expect</h3>
                <div class="grid gap-4">
                  <div class="flex items-start gap-3">
                    <div class="w-6 h-6 bg-accent/10 rounded-full flex items-center justify-center flex-shrink-0 mt-0.5">
                      <span class="w-2 h-2 bg-accent rounded-full"></span>
                    </div>
                    <span class="text-gray-700 leading-relaxed">
                      {tour.countries.length > 1 
                        ? `Multi-country adventure through ${tour.countries.join(', ')}, experiencing diverse cultures and landscapes`
                        : `Authentic local experience in ${tour.countries[0] || 'the region'} with expert guidance`
                      }
                    </span>
                  </div>
                  {tour.durationDays && tour.durationDays > 1 && (
                    <div class="flex items-start gap-3">
                      <div class="w-6 h-6 bg-accent/10 rounded-full flex items-center justify-center flex-shrink-0 mt-0.5">
                        <span class="w-2 h-2 bg-accent rounded-full"></span>
                      </div>
                      <span class="text-gray-700 leading-relaxed">
                        Multi-day journey with carefully selected accommodations and authentic local meals
                      </span>
                    </div>
                  )}
                  <div class="flex items-start gap-3">
                    <div class="w-6 h-6 bg-accent/10 rounded-full flex items-center justify-center flex-shrink-0 mt-0.5">
                      <span class="w-2 h-2 bg-accent rounded-full"></span>
                    </div>
                    <span class="text-gray-700 leading-relaxed">
                      Professional local guides with deep knowledge of the area's history and culture
                    </span>
                  </div>
                  <div class="flex items-start gap-3">
                    <div class="w-6 h-6 bg-accent/10 rounded-full flex items-center justify-center flex-shrink-0 mt-0.5">
                      <span class="w-2 h-2 bg-accent rounded-full"></span>
                    </div>
                    <span class="text-gray-700 leading-relaxed">
                      Small group sizes ensuring personalized attention and flexible itineraries
                    </span>
                  </div>
                </div>
              </div>
              
              <!-- Call-to-action for more information -->
              <div class="bg-gray-50 p-6 rounded-xl">
                <h3 class="text-lg font-bold mb-3 text-gray-900">Want More Details?</h3>
                <p class="text-gray-600 mb-4">
                  Get a personalized itinerary, detailed pricing, and answers to all your questions by contacting us directly.
                </p>
                <button 
                  onclick="document.getElementById('inquiry-btn')?.click()"
                  class="bg-accent text-white px-6 py-3 rounded-lg hover:bg-accent/90 transition font-medium"
                >
                  Get Detailed Information
                </button>
              </div>
            </div>
          )}
        </section>

        <!-- Experience Highlights -->
        {(tour.inclusions.length > 0 || tour.exclusions.length > 0) && (
          <section class="bg-gray-50 -mx-4 px-4 py-8 lg:rounded-2xl lg:mx-0 lg:px-8">
            <h2 class="text-3xl font-bold mb-8 flex items-center gap-3">
              <span class="block w-1 h-8 bg-accent"></span>
              Experience Details
            </h2>
            
            <div class="grid md:grid-cols-2 gap-8">
              {tour.inclusions.length > 0 && (
                <div>
                  <h3 class="text-lg font-bold mb-4 text-gray-900">What's Included</h3>
                  <ul class="space-y-3">
                    {tour.inclusions.map(item => (
                      <li class="flex items-start gap-3">
                        <span class="flex-shrink-0 w-6 h-6 bg-gray-900 text-white rounded-full flex items-center justify-center text-xs font-bold mt-0.5">
                          ✓
                        </span>
                        <span class="text-gray-700">{item}</span>
                      </li>
                    ))}
                  </ul>
                </div>
              )}
              
              {tour.exclusions.length > 0 && (
                <div>
                  <h3 class="text-lg font-bold mb-4 text-gray-900">Not Included</h3>
                  <ul class="space-y-3">
                    {tour.exclusions.map(item => (
                      <li class="flex items-start gap-3">
                        <span class="flex-shrink-0 w-6 h-6 bg-gray-200 text-gray-600 rounded-full flex items-center justify-center text-xs font-bold mt-0.5">
                          ×
                        </span>
                        <span class="text-gray-600">{item}</span>
                      </li>
                    ))}
                  </ul>
                </div>
              )}
            </div>
          </section>
        )}

        <!-- Departure Information -->
        {tour.departureNotes && (
          <section class="border-l-4 border-accent pl-6">
            <h3 class="text-xl font-bold mb-3">Important Information</h3>
            <p class="text-gray-700">{tour.departureNotes}</p>
          </section>
        )}

        <!-- Trust Section -->
        <section class="bg-gray-900 text-white -mx-4 px-4 py-12 lg:rounded-2xl lg:mx-0 lg:px-8">
          <div class="text-center max-w-3xl mx-auto">
            <h2 class="text-2xl font-bold mb-4">Why Book With AlbaniaVisit</h2>
            <p class="text-gray-300 mb-8">
              We partner with the most trusted local operators to bring you authentic experiences at the best prices.
            </p>
            <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
              <div>
                <div class="w-12 h-12 bg-accent rounded-full flex items-center justify-center mx-auto mb-3">
                  <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"></path>
                  </svg>
                </div>
                <h3 class="font-bold mb-2">Verified Operators</h3>
                <p class="text-sm text-gray-400">All partners vetted for safety and quality</p>
              </div>
              <div>
                <div class="w-12 h-12 bg-accent rounded-full flex items-center justify-center mx-auto mb-3">
                  <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                  </svg>
                </div>
                <h3 class="font-bold mb-2">Best Price Guarantee</h3>
