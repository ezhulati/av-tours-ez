---
import BaseLayout from '../../layouts/BaseLayout.astro'
import ImageManager from '../../components/admin/ImageManager'

// Check for admin authentication (implement your auth logic)
const isAdmin = true // Replace with actual auth check

if (!isAdmin) {
  return Astro.redirect('/404')
}
---

<BaseLayout title="Image Manager - Admin">
  <div class="min-h-screen bg-gray-50">
    <div class="max-w-7xl mx-auto px-4 py-8">
      <div class="bg-white rounded-lg shadow-lg">
        <div class="px-6 py-4 border-b border-gray-200">
          <h1 class="text-2xl font-bold text-gray-900">Tour Image Manager</h1>
          <p class="mt-1 text-sm text-gray-600">
            Manage and synchronize tour images from BNAdventure
          </p>
        </div>
        
        <ImageManager client:load />
      </div>
    </div>
  </div>
</BaseLayout>