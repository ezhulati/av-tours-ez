---
import BaseLayout from '@/layouts/BaseLayout.astro'
import { getFeaturedTours, getTotalTourCount } from '@/lib/queries'
import { generateOrganizationSchema } from '@/lib/seo'
import BookingButton from '@/components/tours/BookingButton'

const featuredTours = await getFeaturedTours(6)
const totalTourCount = await getTotalTourCount()
const organizationSchema = generateOrganizationSchema()
---

<BaseLayout 
  title="AlbaniaVisit - Discover the Unexpected | Authentic Balkan Adventures"
  jsonLd={organizationSchema}
>
  <!-- Hero Section with Brand Design -->
  <section class="relative h-screen min-h-[600px] flex items-center justify-center overflow-hidden bg-gradient-to-br from-gray-900 via-gray-800 to-gray-900">
    <!-- Background with subtle overlay -->
    <div class="absolute inset-0">
      <div class="absolute inset-0 bg-gradient-to-t from-black/20 to-transparent"></div>
    </div>
    
    <!-- Animated mountain icon -->
    <div class="absolute bottom-10 left-0 right-0 flex justify-center animate-bounce-slow">
      <svg class="w-12 h-12 text-white opacity-50" fill="currentColor" viewBox="0 0 24 24">
        <path d="M14 6l-4.22 5.63 1.25 1.67L14 9.33 19 16h-8.46l-4.01-5.37L1 18h22L14 6zM5 16l1.52-2.03L8.04 16H5z"/>
      </svg>
    </div>

    <div class="relative z-10 text-center text-white px-4 max-w-7xl mx-auto">
      <!-- Hero Typography Stack - 2025 Design -->
      <div class="space-y-6 md:space-y-8">
        <!-- Main Headline - Fluid Typography with Perfect Scaling -->
        <h1 class="font-serif font-bold leading-[0.9] tracking-tight animate-fade-in">
          <span class="block text-[clamp(3rem,8vw,7rem)] text-white drop-shadow-2xl">
            Elevate Your
          </span>
          <span class="block text-[clamp(3.5rem,10vw,8rem)] text-accent drop-shadow-2xl mt-1 md:mt-0">
            Experience
          </span>
        </h1>
        
        <!-- Subheadline - Balanced Visual Weight -->
        <p class="text-[clamp(0.875rem,2.2vw,1.75rem)] font-light leading-tight max-w-4xl mx-auto text-gray-100 whitespace-nowrap">
          No tourist traps. Just raw terrain and local guides.
        </p>
        
        <!-- Supporting Text - Subtle but Clear -->
        <p class="text-[clamp(0.875rem,2vw,1.125rem)] opacity-80 max-w-2xl mx-auto">
          <span class="font-medium">{totalTourCount}</span> authentic adventures across the untamed Balkans
        </p>
      </div>
      
      <!-- Modern CTA Design - 2025 Style -->
      <div class="flex flex-col sm:flex-row gap-3 sm:gap-4 justify-center mt-10 md:mt-12">
        <a href="/tours" class="group relative inline-flex items-center justify-center bg-accent hover:bg-accent-600 text-white px-8 py-4 rounded-full font-medium text-[clamp(0.938rem,2vw,1.125rem)] transition-all transform hover:scale-105 shadow-2xl shadow-accent/20 hover:shadow-accent/30 min-h-[52px]">
          <span>Explore All Tours</span>
          <svg class="w-5 h-5 ml-2 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
          </svg>
        </a>
        <a href="#featured" class="relative inline-flex items-center justify-center bg-white/5 backdrop-blur-lg hover:bg-white/10 text-white px-8 py-4 rounded-full font-medium text-[clamp(0.938rem,2vw,1.125rem)] transition-all border border-white/20 hover:border-white/30 min-h-[52px]">
          <span>View Featured</span>
        </a>
      </div>

      <!-- Trust Indicators -->
      <div class="mt-12 flex justify-center gap-8 text-sm">
        <div class="flex items-center gap-2">
          <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
            <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
          </svg>
          <span>4.9/5 Rating</span>
        </div>
        <div class="flex items-center gap-2">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
          </svg>
          <span>Since 2020</span>
        </div>
        <div class="flex items-center gap-2">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
          </svg>
          <span>2000+ Happy Adventurers</span>
        </div>
      </div>
    </div>
  </section>

  <!-- Featured Tours with Brand Styling -->
  <section id="featured" class="container mx-auto px-4 py-20">
    <div class="text-center mb-12">
      <h2 class="text-heading-1 mb-4 font-serif">
        <span class="text-gray-900">Featured</span> <span class="text-accent">Adventures</span>
      </h2>
      <p class="text-body-large text-gray-600">Handpicked mountain experiences for authentic explorers</p>
    </div>
    
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {featuredTours.map((tour) => (
        <article class="bg-white rounded-2xl shadow-xl overflow-hidden hover:shadow-2xl transition-all transform hover:-translate-y-1">
          <div class="aspect-[4/3] relative overflow-hidden">
            <img 
              src={tour.primaryImageUrl} 
              alt={tour.title}
              loading="lazy"
              class="w-full h-full object-cover hover:scale-110 transition-transform duration-500"
            />
            {tour.featured && (
              <span class="absolute top-4 left-4 bg-accent text-white px-3 py-1 rounded-full text-sm font-bold">
                ⭐ Featured
              </span>
            )}
            <div class="absolute inset-0 bg-gradient-to-t from-black/50 to-transparent opacity-0 hover:opacity-100 transition-opacity"></div>
          </div>
          <div class="p-6">
            <h3 class="text-xl font-bold mb-2 text-gray-900">
              <a href={`/tours/${tour.slug}`} class="hover:text-accent transition-colors">
                {tour.title}
              </a>
            </h3>
            <p class="text-gray-600 mb-4 line-clamp-2">
              {tour.shortDescription}
            </p>
            <div class="flex items-center justify-between mb-4">
              <div class="flex gap-2">
                {tour.durationDisplay && (
                  <span class="text-sm bg-gray-100 text-gray-700 px-3 py-1 rounded-full font-medium">
                    {tour.durationDisplay}
                  </span>
                )}
                {tour.difficulty && (
                  <span class="text-sm bg-gray-100 text-gray-700 px-3 py-1 rounded-full capitalize font-medium">
                    {tour.difficulty}
                  </span>
                )}
              </div>
              <span class="font-bold text-lg text-gray-900">
                {tour.priceMin ? `From €${tour.priceMin}` : 'Price on request'}
              </span>
            </div>
            <a 
              href={`/tours/${tour.slug}`}
              class="flex items-center justify-center w-full bg-accent text-white p-3 rounded-full hover:bg-accent-600 transition-all font-semibold transform hover:scale-105 whitespace-nowrap min-h-[48px]"
            >
              View Details
            </a>
          </div>
        </article>
      ))}
    </div>
    
    <div class="text-center mt-12">
      <a href="/tours" class="inline-flex items-center justify-center bg-gray-900 text-white p-4 rounded-full hover:bg-gray-800 transition-all font-semibold text-lg whitespace-nowrap min-h-[56px] min-w-[200px]">
        View All Tours →
      </a>
    </div>
  </section>

  <!-- Categories with Brand Colors -->
  <section class="bg-gradient-to-br from-gray-50 to-gray-100 py-20">
    <div class="container mx-auto px-4">
      <h2 class="text-heading-1 text-center mb-12 font-serif">
        Explore by <span class="text-accent">Activity</span>
      </h2>
      <div class="grid grid-cols-2 md:grid-cols-4 gap-6">
        <a href="/category/adventure" class="group">
          <div class="bg-white rounded-xl p-6 text-center hover:shadow-xl transition-all transform hover:-translate-y-1 border-2 border-transparent hover:border-accent">
            <div class="w-16 h-16 mx-auto mb-4 bg-gray-100 rounded-full flex items-center justify-center group-hover:bg-accent transition-colors">
              <svg class="w-8 h-8 text-accent group-hover:text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
              </svg>
            </div>
            <h3 class="font-semibold text-gray-900 group-hover:text-accent">Adventure</h3>
          </div>
        </a>
        <a href="/category/hiking" class="group">
          <div class="bg-white rounded-xl p-6 text-center hover:shadow-xl transition-all transform hover:-translate-y-1 border-2 border-transparent hover:border-accent">
            <div class="w-16 h-16 mx-auto mb-4 bg-gray-100 rounded-full flex items-center justify-center group-hover:bg-gray-900 transition-colors">
              <svg class="w-8 h-8 text-gray-700 group-hover:text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 15a4 4 0 004 4h9a5 5 0 10-.1-9.999 5.002 5.002 0 10-9.78 2.096A4.001 4.001 0 003 15z"></path>
              </svg>
            </div>
            <h3 class="font-semibold text-gray-900 group-hover:text-accent">Hiking</h3>
          </div>
        </a>
        <a href="/category/cultural" class="group">
          <div class="bg-white rounded-xl p-6 text-center hover:shadow-xl transition-all transform hover:-translate-y-1 border-2 border-transparent hover:border-accent">
            <div class="w-16 h-16 mx-auto mb-4 bg-gray-100 rounded-full flex items-center justify-center group-hover:bg-gray-900 transition-colors">
              <svg class="w-8 h-8 text-gray-900 group-hover:text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
              </svg>
            </div>
            <h3 class="font-semibold text-gray-900 group-hover:text-accent">Cultural</h3>
          </div>
        </a>
        <a href="/category/beach" class="group">
          <div class="bg-white rounded-xl p-6 text-center hover:shadow-xl transition-all transform hover:-translate-y-1 border-2 border-transparent hover:border-accent">
            <div class="w-16 h-16 mx-auto mb-4 bg-gray-100 rounded-full flex items-center justify-center group-hover:bg-gray-900 transition-colors">
              <svg class="w-8 h-8 text-gray-700 group-hover:text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.5 18c3.5-3 7-3 10.5 0s7 3 10.5 0M2.5 12c3.5-3 7-3 10.5 0s7 3 10.5 0"></path>
              </svg>
            </div>
            <h3 class="font-semibold text-gray-900 group-hover:text-accent">Beach & Coast</h3>
          </div>
        </a>
      </div>
    </div>
  </section>

  <!-- Destinations with Brand Styling -->
  <section class="py-20">
    <div class="container mx-auto px-4">
      <h2 class="text-3xl md:text-4xl font-bold text-center mb-12 font-serif">
        Popular <span class="text-gray-900">Mountain</span> Destinations
      </h2>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
        <a href="/country/albania" class="group">
          <div class="relative h-80 rounded-2xl overflow-hidden shadow-xl">
            <div class="absolute inset-0 bg-gradient-to-t from-black/70 via-black/30 to-transparent z-10"></div>
            <img 
              src="/Assets/Albania/Accursed_Mountains.jpeg" 
              alt="Albania - Accursed Mountains"
              class="w-full h-full object-cover group-hover:scale-110 transition duration-500"
              loading="lazy"
            />
            <div class="absolute bottom-6 left-6 z-20 text-white">
              <h3 class="text-3xl font-bold mb-1">Albania</h3>
              <p class="text-sm opacity-90">The hidden gem of Europe</p>
              <div class="mt-2 flex items-center gap-1 text-accent">
                <span class="text-sm font-semibold">Explore</span>
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                </svg>
              </div>
            </div>
          </div>
        </a>
        <a href="/country/kosovo" class="group">
          <div class="relative h-80 rounded-2xl overflow-hidden shadow-xl">
            <div class="absolute inset-0 bg-gradient-to-t from-black/70 via-black/30 to-transparent z-10"></div>
            <img 
              src="/Assets/Kosovo/Gjeravica_Kosovo_336042834.jpeg" 
              alt="Kosovo - Gjeravica Peak"
              class="w-full h-full object-cover group-hover:scale-110 transition duration-500"
              loading="lazy"
            />
            <div class="absolute bottom-6 left-6 z-20 text-white">
              <h3 class="text-3xl font-bold mb-1">Kosovo</h3>
              <p class="text-sm opacity-90">Young nation, ancient peaks</p>
              <div class="mt-2 flex items-center gap-1 text-accent">
                <span class="text-sm font-semibold">Explore</span>
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                </svg>
              </div>
            </div>
          </div>
        </a>
        <a href="/country/macedonia" class="group">
          <div class="relative h-80 rounded-2xl overflow-hidden shadow-xl">
            <div class="absolute inset-0 bg-gradient-to-t from-black/70 via-black/30 to-transparent z-10"></div>
            <img 
              src="/Assets/North Macedonia/North Macedonia_456949808.jpeg" 
              alt="North Macedonia"
              class="w-full h-full object-cover group-hover:scale-110 transition duration-500"
              loading="lazy"
            />
            <div class="absolute bottom-6 left-6 z-20 text-white">
              <h3 class="text-3xl font-bold mb-1">Macedonia</h3>
              <p class="text-sm opacity-90">Land of lakes and mountains</p>
              <div class="mt-2 flex items-center gap-1 text-accent">
                <span class="text-sm font-semibold">Explore</span>
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                </svg>
              </div>
            </div>
          </div>
        </a>
        <a href="/country/montenegro" class="group">
          <div class="relative h-80 rounded-2xl overflow-hidden shadow-xl">
            <div class="absolute inset-0 bg-gradient-to-t from-black/70 via-black/30 to-transparent z-10"></div>
            <img 
              src="/Assets/Montenegro/Kotor Montenegro_123711552.jpeg" 
              alt="Montenegro - Bay of Kotor"
              class="w-full h-full object-cover group-hover:scale-110 transition duration-500"
              loading="lazy"
            />
            <div class="absolute bottom-6 left-6 z-20 text-white">
              <h3 class="text-3xl font-bold mb-1">Montenegro</h3>
              <p class="text-sm opacity-90">Wild beauty of the Adriatic</p>
              <div class="mt-2 flex items-center gap-1 text-accent">
                <span class="text-sm font-semibold">Explore</span>
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                </svg>
              </div>
            </div>
          </div>
        </a>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="bg-gradient-to-r from-gray-900 to-gray-800 py-20">
    <div class="container mx-auto px-4 text-center text-white">
      <h2 class="text-4xl md:text-5xl font-bold mb-6 font-serif">
        Ready for Your Next Adventure?
      </h2>
      <p class="text-xl mb-8 max-w-2xl mx-auto opacity-90">
        Join thousands of adventurers who have discovered the authentic beauty of the Balkans with AlbaniaVisit.
      </p>
      <a href="/tours" class="inline-flex items-center justify-center bg-accent hover:bg-accent-600 text-white p-5 rounded-full font-bold text-lg transition-all transform hover:scale-105 shadow-xl whitespace-nowrap min-h-[64px] min-w-[240px]">
        Start Your Journey
      </a>
    </div>
  </section>
</BaseLayout>