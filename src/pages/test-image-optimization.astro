---
import BaseLayout from '@/layouts/BaseLayout.astro'
import OptimizedImage from '@/components/OptimizedImage.astro'
import { getOptimizedImageUrl } from '@/lib/safeImageOptimization'

// Test various image sources
const testImages = [
  {
    src: '/Assets/Albania/Albanian_Alps.jpg',
    alt: 'Local asset - Albanian Alps',
    type: 'Local Asset'
  },
  {
    src: 'https://bnadventure.com/wp-content/uploads/2024/10/DSCF9726-scaled.jpg',
    alt: 'BNAdventure external image',
    type: 'BNAdventure URL'
  },
  {
    src: 'https://mioqyazjthmrmgsbsvfg.supabase.co/storage/v1/object/public/tour-images/sample.jpg',
    alt: 'Supabase storage image',
    type: 'Supabase Storage'
  }
]
---

<BaseLayout title="Image Optimization Test">
  <div class="container mx-auto px-4 py-12">
    <h1 class="text-3xl font-bold mb-8">Image Optimization Test Page</h1>
    
    <div class="mb-8 p-4 bg-blue-50 rounded">
      <p class="font-semibold">Environment: {import.meta.env.MODE}</p>
      <p>Production: {import.meta.env.PROD ? 'Yes' : 'No'}</p>
      <p>Development: {import.meta.env.DEV ? 'Yes' : 'No'}</p>
    </div>
    
    <div class="space-y-12">
      {testImages.map((image) => (
        <div class="border rounded-lg p-6">
          <h2 class="text-xl font-semibold mb-2">{image.type}</h2>
          <p class="text-sm text-gray-600 mb-4">Source: {image.src}</p>
          
          <div class="grid md:grid-cols-2 gap-8">
            <!-- Original Image -->
            <div>
              <h3 class="font-semibold mb-2">Original Image</h3>
              <img 
                src={image.src} 
                alt={`Original: ${image.alt}`}
                class="w-full rounded shadow"
                loading="lazy"
              />
              <p class="text-xs mt-2 text-gray-500">Direct src attribute</p>
            </div>
            
            <!-- Optimized Image -->
            <div>
              <h3 class="font-semibold mb-2">Optimized Image</h3>
              <OptimizedImage
                src={image.src}
                alt={`Optimized: ${image.alt}`}
                class="w-full rounded shadow"
                loading="lazy"
              />
              <p class="text-xs mt-2 text-gray-500">
                Using OptimizedImage component
              </p>
            </div>
          </div>
          
          <!-- Show optimized URLs -->
          <div class="mt-4 p-3 bg-gray-100 rounded text-xs">
            <p class="font-semibold mb-1">Optimized URLs:</p>
            <p>Small (320w): {getOptimizedImageUrl(image.src, { width: 320, format: 'webp' })}</p>
            <p>Medium (768w): {getOptimizedImageUrl(image.src, { width: 768, format: 'webp' })}</p>
            <p>Large (1920w): {getOptimizedImageUrl(image.src, { width: 1920, format: 'webp' })}</p>
          </div>
        </div>
      ))}
    </div>
    
    <div class="mt-12 p-6 bg-yellow-50 border border-yellow-200 rounded">
      <h2 class="text-lg font-semibold mb-2">How This Works:</h2>
      <ul class="list-disc pl-5 space-y-1 text-sm">
        <li><strong>Local Assets (/Assets/...):</strong> Use Netlify Image CDN in production</li>
        <li><strong>BNAdventure URLs:</strong> Optimize via Weserv.nl proxy</li>
        <li><strong>Supabase/Other External:</strong> Use directly without optimization</li>
        <li><strong>Development Mode:</strong> Always use original images</li>
      </ul>
    </div>
  </div>
</BaseLayout>